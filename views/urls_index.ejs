<%- include ('partials/_header') %>

<title>TinyApp</title>
</head>

<body>
    <main style="margin: 1em;">
        <h3>My URLs</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Short URL</th>
                    <th scope="col">Long URL</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% for(let url in urls) { %>
                <tr>
                    <td><%= url %></td>
                    <td><%= urls[url] %></td>
                    <td>
                        <form action="/urls/<%= url %>/delete">
                            <button type="submit" class="btn btn-outline-danger">DELETE</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </main>

    <%- include ('partials/_footer') %>